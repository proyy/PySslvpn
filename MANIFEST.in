exclude .gitignore
exclude .git/
exclude __pycache__/
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude .DS_Store
exclude Thumbs.db

# Exclude development related files
exclude tests/
exclude docs/
exclude .github/
exclude .vscode/
exclude .idea/